<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <base href="/">
        <title>@ViewBag.Title</title>
            @Styles.Render("~/Content/css")
            @Styles.Render("~/bundles/styles")
    
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body ng-app="adventCalendarApp" ng-controller="baseController">

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")

        @* Add Angular Library Here *@
        @Scripts.Render("~/bundles/angular")
        <script src="~/angularJSApp/app.module.js"></script>
        <script src="~/angularJSApp/app.routes.js"></script>
        @Scripts.Render("~/bundles/angular/shared")
        @Scripts.Render("~/bundles/angular/components")
    </body>
</html>
