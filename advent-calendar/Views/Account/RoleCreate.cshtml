<h1>Skapa ny roll i systemet</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="col-md-4">
            @Html.Label("RoleName", "Ny roll")
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon3">Rollben&auml;mning</span>
                @Html.TextBox("RoleName", "", new Dictionary<string, string>() { { "class", "form-control" }, { "aria-describedby", "basic-addon3" } })
            </div>
            <br />
            <input type="submit" value="Spara" class="btn btn-primary btn-lg" />
        </div>
    </div>
}