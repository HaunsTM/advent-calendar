@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width" />
    <base href="/">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/styles")
</head>

<body ng-app="adventCalendarApp" ng-controller="baseController">
    
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" aria-expanded="false" data-target="#navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><img src="~/angularJSApp/images/adventCalendarSE-logo.gif" alt=""></a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown" ng-if="AdministratorMenuShouldBeDisplayed()">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Administratör <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a ui-sref="stateCreateCalendar">Skapa kalenderbas</a></li>
                            <li><a ui-sref="stateUploadSlotsToCalendar">Ladda upp luckor</a></li>
                            <li><a ui-sref="stateAssignUsersToCalendar">Kalenderns användare</a></li>
                            <li><a ui-sref="stateCalendar">Visa kalendern</a></li>
                        </ul>
                    </li>
                    <li><a ui-sref="stateRegisterUserAdministrator" ng-if="!LoggedIn()">Registrera</a></li>
                    <li>
                        <a ui-sref="stateLogin" class="btn btn-default btn-xs" ng-if="!LoggedIn()">Logga in</a>
                        <a class="btn btn-success btn-xs" ng-click="LogOut()" ng-if="LoggedIn()">Logga ut</a>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    

    <div class="container">

        <div class="row">
            <div class="col-sm-6">
                <div ui-view="containerOne"></div>
            </div>
            <div class="col-sm-6">
                <div ui-view="containerTwo"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div ui-view="containerCalendar"></div>
            </div>
        </div>
    </div>
    <footer class="footer">
        <p>&copy; @DateTime.Now.Year - Adventskalendern&trade;</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @* Add Angular Library Here *@
    @Scripts.Render("~/bundles/angular")
    <script src="~/angularJSApp/app.module.js"></script>
    <script src="~/angularJSApp/app.routes.js"></script>
    @Scripts.Render("~/bundles/angular/shared")
    @Scripts.Render("~/bundles/angular/components")
</body>
</html>
